{
  "name": "defy-invest-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node --enable-source-maps --experimental-specifier-resolution=node dist/src/server.js",
    "start:local": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config --enable-source-maps --experimental-specifier-resolution=node dist/src/server.js",
    "build": "tsc -p tsconfig.json",
    "postbuild": "chmod +x dist/src/server.js",
    "migrate": "node scripts/helpers/db/migrate.ts",
    "migrate:docker": "docker compose run --rm migrator",
    "migrate:db-up": "docker compose up -d db",
    "db:seed:dev": "DOTENV_CONFIG_PATH=.env.local tsx -r dotenv/config scripts/helpers/db/seed_dev.ts",
    "db:seed:dev:dist": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config dist/scripts/helpers/db/seed_dev.js",
    "db:reset": "bash scripts/db_reset.sh",
    "db:reset:dry": "DRY_RUN=1 bash scripts/db_reset.sh",
    "smoke:defindex:create": "tsx scripts/vault/stellar-sdk/defindex_vault_create.ts",
    "apis:lint": "spectral lint 'apis/**/*.yaml'",
    "apis:docs": "redocly build-docs apis/defy-api/openapi.yaml -o docs/defy-api.html",
    "apis:mock": "prism mock apis/defy-api/openapi.yaml -p 4010",
    "apis:test:soroswap": "newman run apis/soroswap/postman/collection.json -e apis/common/env.testnet.postman.json",
    "apis:test:defindex": "newman run apis/defindex/postman/collection.json -e apis/common/env.testnet.postman.json",
    "types:defy": "openapi-typescript apis/defy-api/openapi.yaml --output api/src/types/defy-api.d.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "e2e:soroban": "bash scripts/E2E/smoke_e2e_soroban.sh"
  },
  "dependencies": {
    "@defindex/sdk": "^0.1.1",
    "@iarna/toml": "^2.2.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@reflector/oracle-client": "github:reflector-network/oracle-client",
    "@stellar/stellar-sdk": "^14.1.1",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "pino": "^9.1.0",
    "precise-money": "^0.1.2",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@redocly/cli": "^1",
    "@stoplight/prism-cli": "^5",
    "@stoplight/spectral-cli": "^6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "husky": "^9.1.7",
    "newman": "^6",
    "openapi-typescript": "^7",
    "stellar-hd-wallet": "^1.0.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
